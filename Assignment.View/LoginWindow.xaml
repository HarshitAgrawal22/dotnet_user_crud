<Window x:Class="Assignment.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Assignment.ViewModel;assembly=Assignment.ViewModel"
        Title="Login" Height="550" Width="600" WindowStartupLocation="CenterScreen"
        Background="#1e1e2f">
    <Window.DataContext>
        <vm:LoginViewModel />
    </Window.DataContext>

    <Grid>
        <Border Padding="30"
                CornerRadius="10"
                Background="#2b2b3c"
                BorderBrush="#44475a"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <StackPanel Width="300">
                <!-- Title -->
                <TextBlock Text="🔐 User Login"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#f1f1f1"
                           Margin="0,0,0,25"
                           TextAlignment="Center"
                           FontFamily="Segoe UI" />

                <!-- Email -->
                <Label Content="Email"
                       FontWeight="SemiBold"
                       Foreground="#cfcfcf" />
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5,0,15"
                         Height="28"
                         Background="#3b3f51"
                         Foreground="White"
                         BorderBrush="#555"
                         CaretBrush="White"/>

                <!-- Password -->
                <Label Content="Password"
                       FontWeight="SemiBold"
                       Foreground="#cfcfcf" />
                <PasswordBox x:Name="PwdBox"
                             Margin="0,5,0,15"
                             Height="28"
                             Background="#3b3f51"
                             Foreground="White"
                             BorderBrush="#555"
                             CaretBrush="White"/>

                <!-- Login Button -->
                <Button Content="Login"
                        Command="{Binding LoginCommand}"
                        Height="32"
                        Background="#0078D7"
                        Foreground="White"
                        FontWeight="Bold"
                        Cursor="Hand"/>

                <!-- Message -->
                <TextBlock Text="{Binding LoginMessage}"
                           Foreground="#e57373"
                           Margin="0,10,0,0"
                           TextAlignment="Center"/>

                <!-- Register Link -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">
                    <TextBlock Text="Don't have an account?"
                               Foreground="#dcdcdc"/>
                    <Button Content="Register Here"
                            Command="{Binding RegisterCommand}"
                            Padding="4,2"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Foreground="#61afef"
                            FontWeight="Bold"
                            Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
